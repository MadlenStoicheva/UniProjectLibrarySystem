@model  LibrarySystemProject.Views.Login.LoginViewModel

@{
   
    ViewBag.Title = "Login";
     Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div class="row">
    <div class="col-lg-6"  style="background-color:#333; width:450px; height: 350px; border-radius:25px; margin-top:100px; margin-bottom:10em;">
        <div style="background-color:white; width:400px; height:250px; border-radius:25px; position:relative; left:11px; top:15%; padding-top:10px;">
            <form action="/Home/Login" method="post">
                <div class="form-group">
                   @Html.LabelFor(model => model.Username, "Username", new { @class = "control-label col-md-6", @style = "color: #333; font-size:15px; margin-left: 10em; padding-top:15px;" })


                   @Html.TextBoxFor(model => model.Username, new { @class = "form-control col-md-offset-2" }) 
                    <div style="margin:10px; margin-left:13em; margin-top:1em; font-size:11px;">
                   @Html.ValidationMessageFor(model => model.Username)
                   </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, "Password", new { @class = "control-label col-md-5", @style = "color: #333; font-size:15px; margin-left: 10em; margin-top:10px;" })


                    @Html.PasswordFor(model => model.Password, new { @class = "form-control col-md-offset-2" })

                    <div style=" margin-top:10px; margin-left:11em; font-size:11px;">
                    @Html.ValidationMessageFor(model => model.Password)
                    @Html.ValidationMessage("failedLogin")
                    </div>
               </div>

                <div class="col-md-offset-2 col-md-10" style="margin:1em; margin-left:11em;">
                    <input type="submit" value="Login"  class="btn-success" style="border-radius:15px; background-color:#333; border-color:#333; color:white; height:2.5em; width:5em;" />

                </div>
                <br />
            </form>
        </div>
    </div>

    <div class="col-lg-6" style="width:30em; height:20em; margin:5em; left:11em;">
        <img src="https://s-media-cache-ak0.pinimg.com/236x/c6/7d/bb/c67dbbf2d48647e91a49f69b7a9c7bac.jpg" style="width:100%"/>
    </div>
   </div>
</body>
</html>
