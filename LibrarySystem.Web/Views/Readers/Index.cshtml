@model LibrarySystemProject.Models.ReaderViewModel.ReaderListViewModel
@{
    ViewBag.Title = "Index";
}

<h1 style="text-align:center; margin-top:25px; color:#333;">Readers</h1>

<button class="btn-success" style="border-radius:25px; background-color:#333; border-color:#333; height:3em; width:7em; margin-bottom:20px; ">
    @Html.ActionLink("Add new", "Create", "Readers", new { @style = "color:white; text-decoration:none; font-weight:bold;" })
</button>

<table class="table">
    <thead>
        <tr class="btn-success" style="background-color:#333; border-color:#333;">
            <th style="text-align:center;">First Name</th>
            <th style="text-align:center;">Last Name</th>
            <th style="text-align:center;">Reader Card</th>
            <th style="text-align:center;">Expire Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reader in Model.Readers)
        {
            <tr class="bg-info text-white" style="text-align:center;">
                <td>@reader.firstName</td>
                <td>@reader.lastName</td>
                <td>@reader.readerCard</td>
                <td>@reader.expireDate</td>
                <td>
                    <button class="btn-default" style="border-radius:15px; height:2.5em; width:5em;">
                    @Html.ActionLink("Edit", "Edit", "Readers", new { id = reader.Id }, null)
                    </button>                

                    @{
                        if (LibrarySystemProject.LoginFilter.LoginUser.IsAdmin())
                        {
                            <button class="btn-default" style="border-radius:15px; height:2.5em; width:5em;">
                                @Html.ActionLink("Delete", "Delete", "Readers", new { id = reader.Id }, null)
                            </button>
                        }
                    }

                </td>
            </tr>
        }
    </tbody>
</table>

