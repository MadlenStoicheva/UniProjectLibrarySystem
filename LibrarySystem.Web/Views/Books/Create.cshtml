@model LibrarySystemProject.Models.BookViewModel.BookCreateViewModel
@{
    ViewBag.Title = "Create";

}

<h2 style="text-align:center; margin-top:30px; color:#333; margin-bottom: 50px; font-size:35px;">Create</h2>

@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.imgURL, "ImgURL", new { @class = "control-label col-md-5", @style = "color: #333; font-size:22px;" })

            @Html.TextBoxFor(model => model.imgURL, new { @class = "form-control col-md-offset-5" })
            @Html.ValidationMessageFor(model => model.imgURL)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.numberISBN, "Number ISBN" , new { @class = "control-label col-md-5", @style = "color: #333; font-size:22px;" })
          
            @Html.TextBoxFor(model => model.numberISBN, new { @class = "form-control col-md-offset-5" })
            @Html.ValidationMessageFor(model => model.numberISBN)
            
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.title, "Title", new { @class = "control-label col-md-5", @style = "color: #333; font-size:22px;" })
           
            @Html.TextBoxFor(model => model.title, new { @class = "form-control col-md-offset-5" })
            @Html.ValidationMessageFor(model => model.title)
          
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.author, "Author", new { @class = "control-label col-md-5", @style = "color: #333; font-size:22px;" })
                
            @Html.TextBoxFor(model => model.author, new { @class = "form-control col-md-offset-5" })
            @Html.ValidationMessageFor(model => model.author)
         
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.publishingHouse, "Publishing House", new { @class = "control-label col-md-5", @style = "color: #333; font-size:22px;" })
                
            @Html.TextAreaFor(model => model.publishingHouse, new { @class = "form-control col-md-offset-5" })
            @Html.ValidationMessageFor(model => model.publishingHouse)

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.releaseDate, "Release Date" , htmlAttributes: new { @class = "control-label col-md-5", @style = "color: #333; font-size:22px;" })
               
            @Html.EditorFor(model => model.releaseDate, new { htmlAttributes = new { @class = "form-control col-md-offset-5" } })
            @Html.ValidationMessageFor(model => model.releaseDate, "", new { @class = "text-danger" })
          
            @*<div class="col-md-10">
            @Html.EditorFor(model => model.releaseDate, new { htmlAttributes = new { @class = "datepicker" } })
        </div>*@
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.availability, "Availability", new { @class = "control-label col-md-5", @style = "color: #333; font-size:22px;" })
            <input type="number"  name="availability" value="50">
            @*@Html.TextBoxFor(model => model.availability, new { @class = "form-control col-md-offset-5" })*@
            @Html.ValidationMessageFor(model => model.availability)

        </div>
        <div class="form-group" style="margin-top:15px;">
            <div class="col-md-offset-5 col-md-10">
                <input type="submit" value="Save" class="btn-success" style="border-radius:15px; background-color:#333; border-color:#333; height:2.5em; width:5em;"/>
                
                <button class="btn-default" style="border-radius:15px; height:2.5em; width:5em;">
                    @Html.ActionLink("Cancel", "Index", "Books")
                </button>
            </div>
        </div>
    </div>
}


